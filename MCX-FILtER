import pandas as pd

# Load the CSV file into a DataFrame
file_path = 'https://api.kite.trade/instruments'  # replace with your CSV file path
df = pd.read_csv(file_path)

# Define the segments to filter by
segments_to_filter = ['MCX-OPT','MCX-FUT',]

# Filter the DataFrame based on the specified segments
filtered_df = df[df['segment'].isin(segments_to_filter)]

# Sort the filtered DataFrame by name (assuming the name column is labeled 'Name')
sorted_df = filtered_df.sort_values(by='segment')

# Optionally, save the result to a new CSV file
sorted_df.to_csv('MCX.csv', index=False)
